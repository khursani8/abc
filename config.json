      "ha_bull": 1,
      "ha_strong": 1,
      "adx_strong_bull": 1,
      "near_daily_support": 2,
      "rsi_divergence": 3,
      "macd_divergence": 3,
      "consecutive_ha_bull_bonus": 1,
      "consecutive_macd_incr_bonus": 1
