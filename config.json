{
  "api": {
    "base_url": "https://api.luno.com/api/exchange/1",
    "key_id_env_var": "LUNO_API_KEY_ID",
    "key_secret_env_var": "LUNO_API_KEY_SECRET"
  },
  "analysis": {
    "symbols": ["XBTMYR", "SOLMYR", "ETHMYR", "ADAMYR"],
